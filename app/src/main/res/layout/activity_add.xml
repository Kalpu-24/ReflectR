<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_dynamic_primary95"
    android:paddingTop="50dp"
    tools:context=".logineduser.AddActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rootScrollView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/gridViewCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@color/material_dynamic_neutral99"
                app:cardBackgroundColor="@color/material_dynamic_neutral99"
                app:cardElevation="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent=".82"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:text="@string/how_are_you"
                        android:textColor="@color/material_dynamic_secondary10"
                        android:textSize="24sp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/gridView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:clickable="true"
                        android:columnWidth="120sp"
                        android:gravity="center"
                        android:isScrollContainer="false"
                        android:numColumns="auto_fit"
                        android:stretchMode="columnWidth"
                        android:verticalSpacing="20dp"
                        tools:ignore="NestedScrolling" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/date_time_privacy_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@color/material_dynamic_primary99"
                android:gravity="center"
                android:orientation="vertical"
                app:cardBackgroundColor="@color/material_dynamic_neutral99"
                app:cardElevation="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/gridViewCard"
                app:layout_constraintWidth_percent=".82"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:baselineAligned="false"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/dateLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal"
                            tools:ignore="UseCompoundDrawables">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="10dp"
                                app:srcCompat="@drawable/filled_calender"
                                tools:ignore="ContentDescription" />

                            <TextView
                                android:id="@+id/date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/underline"
                                android:fontFamily="sans-serif-medium"
                                android:textColor="@color/material_dynamic_secondary10"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/timeLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal"
                            tools:ignore="UseCompoundDrawables">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="10dp"
                                app:srcCompat="@drawable/baseline_access_time_24"
                                tools:ignore="ContentDescription" />

                            <TextView
                                android:id="@+id/time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/underline"
                                android:fontFamily="sans-serif-medium"
                                android:textColor="@color/material_dynamic_secondary10"
                                android:textSize="12sp" />

                        </LinearLayout>
                    </LinearLayout>

                    <com.google.android.material.button.MaterialButtonToggleGroup
                        android:id="@+id/privacyToggleGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:background="@color/material_dynamic_neutral99"
                        app:selectionRequired="true"
                        app:singleSelection="true">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/privateButton"
                            style="@style/Widget.Material3.Button.IconButton.Outlined"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:backgroundTint="@drawable/segment_button_bg_selector"
                            android:fontFamily="sans-serif-medium"
                            android:text="@string/private_string"
                            android:textColor="@drawable/segment_button_text_selector"
                            app:icon="@drawable/private_icon"
                            app:iconGravity="textStart"
                            app:iconPadding="10dp"
                            app:iconTint="@drawable/segment_button_icon_tint_selector"
                            tools:ignore="VisualLintButtonSize" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/publicButton"
                            style="@style/Widget.Material3.Button.IconButton.Outlined"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:backgroundTint="@drawable/segment_button_bg_selector"
                            android:fontFamily="sans-serif-medium"
                            android:text="@string/public_string"
                            android:textColor="@drawable/segment_button_text_selector"
                            app:icon="@drawable/outline_public_24"
                            app:iconGravity="textStart"
                            app:iconPadding="10dp"
                            app:iconTint="@drawable/segment_button_icon_tint_selector"
                            tools:ignore="VisualLintButtonSize" />

                    </com.google.android.material.button.MaterialButtonToggleGroup>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/NoteCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardBackgroundColor="@color/material_dynamic_primary99"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/date_time_privacy_layout"
                app:layout_constraintWidth_percent=".82"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.Material3.TextInputLayout.FilledBox"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginHorizontal="10dp"
                        android:hint="@string/title"
                        android:textColorHint="@color/material_dynamic_secondary10"
                        app:boxBackgroundColor="@color/material_dynamic_primary99"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxStrokeColor="@color/material_dynamic_primary60"
                        app:boxStrokeWidth="2dp"
                        app:counterTextColor="@color/material_dynamic_primary60"
                        app:cursorColor="@color/material_dynamic_primary60"
                        app:errorTextColor="@color/material_dynamic_primary60"
                        app:helperTextTextColor="@color/material_dynamic_primary60"
                        app:hintEnabled="true"
                        app:hintTextColor="@color/material_dynamic_secondary10"
                        app:placeholderTextColor="@drawable/text_hint_color"
                        app:prefixTextColor="@color/material_dynamic_primary60"
                        app:suffixTextColor="@color/material_dynamic_primary60">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-medium"
                            android:imeOptions="actionNext"
                            android:maxLines="1"
                            android:textColor="@color/material_dynamic_secondary10"
                            tools:ignore="TouchTargetSizeCheck,TextContrastCheck,VisualLintTextFieldSize" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.Material3.TextInputLayout.FilledBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:hint="@string/quick_note"
                        android:minHeight="60dp"
                        android:textColorHint="@color/material_dynamic_secondary10"
                        app:boxBackgroundColor="@color/material_dynamic_primary99"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxStrokeColor="@color/material_dynamic_primary60"
                        app:boxStrokeWidth="2dp"
                        app:counterTextColor="@color/material_dynamic_primary60"
                        app:cursorColor="@color/material_dynamic_primary60"
                        app:errorTextColor="@color/material_dynamic_primary60"
                        app:helperTextTextColor="@color/material_dynamic_primary60"
                        app:hintEnabled="true"
                        app:hintTextColor="@color/material_dynamic_secondary10"
                        app:placeholderTextColor="@drawable/text_hint_color"
                        app:prefixTextColor="@color/material_dynamic_primary60"
                        app:suffixTextColor="@color/material_dynamic_primary60"
                        app:textInputLayoutFocusedRectEnabled="false">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/quick_note"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-medium"
                            android:inputType="textMultiLine"
                            android:textColor="@color/material_dynamic_secondary10"
                            tools:ignore="TouchTargetSizeCheck,TextContrastCheck,VisualLintTextFieldSize" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/imageInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginTop="10dp"
                        android:adjustViewBounds="true"
                        android:cropToPadding="true"
                        android:scaleType="centerCrop"
                        android:visibility="gone"
                        app:shapeAppearance="@style/slightRoundedImage"
                        app:shapeAppearanceOverlay="@style/slightRoundedImage" />

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/videoInputFrame"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:foregroundGravity="center"
                        android:visibility="gone"
                        app:cardBackgroundColor="@color/material_dynamic_neutral99"
                        app:cardCornerRadius="70dp">

                        <VideoView
                            android:id="@+id/videoInput"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center" />
                    </com.google.android.material.card.MaterialCardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:visibility="gone"
                        android:id="@+id/audioInputFrame">

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/pauseButton"
                            android:layout_gravity="center"
                            android:backgroundTint="@color/material_dynamic_neutral99"
                            android:layout_weight=".2"
                            android:src="@drawable/round_pause_24"
                            android:visibility="gone"
                            tools:ignore="ContentDescription,SpeakableTextPresentCheck,TouchTargetSizeCheck,ImageContrastCheck"
                            app:tint="@color/material_dynamic_primary70" />

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:id="@+id/playButton"
                            android:backgroundTint="@color/material_dynamic_neutral99"
                            android:layout_weight=".2"
                            android:src="@drawable/round_play_arrow_24"
                            app:tint="@color/material_dynamic_primary70"
                            tools:ignore="ContentDescription,SpeakableTextPresentCheck,TouchTargetSizeCheck,ImageContrastCheck" />

                    <com.masoudss.lib.WaveformSeekBar
                        android:id="@+id/audioInput"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight=".8"
                        android:minHeight="200dp"
                        app:wave_background_color="@color/material_dynamic_neutral90"
                        app:wave_corner_radius="50dp"
                        app:wave_gap="2dp"
                        app:wave_gravity="center"
                        app:wave_min_height="5dp"
                        app:wave_padding_Bottom="2dp"
                        app:wave_padding_left="2dp"
                        app:wave_padding_right="2dp"
                        app:wave_padding_top="2dp"
                        app:wave_progress_color="@color/material_dynamic_primary70"
                        app:wave_width="5dp" />
                    </LinearLayout>

                    <GridLayout
                        android:id="@+id/quick_note_file_grid"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/quick_note_file_bg"
                        android:columnCount="3"
                        android:columnOrderPreserved="true"
                        android:rowCount="1"
                        android:useDefaultMargins="true">

                        <LinearLayout
                            android:id="@+id/imageInputLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_rowWeight="1"
                            android:layout_columnWeight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="5dp"
                            tools:ignore="UseCompoundDrawables">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="10dp"
                                app:srcCompat="@drawable/outline_insert_photo_24"
                                tools:ignore="ContentDescription" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-medium"
                                android:text="@string/image"
                                android:textColor="@color/material_dynamic_secondary10" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/videoInputLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_rowWeight="1"
                            android:layout_columnWeight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            tools:ignore="UseCompoundDrawables">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="10dp"
                                app:srcCompat="@drawable/outline_videocam_24"
                                tools:ignore="ContentDescription" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-medium"
                                android:text="@string/video"
                                android:textColor="@color/material_dynamic_secondary10" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/audioInputLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_rowWeight="1"
                            android:layout_columnWeight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            tools:ignore="UseCompoundDrawables">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="10dp"
                                app:srcCompat="@drawable/outline_audio_file_24"
                                tools:ignore="ContentDescription" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-medium"
                                android:text="@string/audio"
                                android:textColor="@color/material_dynamic_secondary10" />
                        </LinearLayout>
                    </GridLayout>
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/emotion_tags"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif-medium"
                android:text="@string/select_emotions"
                android:textColor="@color/material_dynamic_secondary10"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/NoteCard"
                app:layout_constraintWidth_percent=".82" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/emotions_chip_group"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/emotion_tags"
                app:layout_constraintWidth_percent=".82">


            </com.google.android.material.chip.ChipGroup>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/CategoryLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:hint="@string/category"
                app:boxBackgroundColor="@color/material_dynamic_primary99"
                app:boxCornerRadiusBottomEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusTopStart="12dp"
                app:boxStrokeColor="@color/material_dynamic_primary60"
                app:boxStrokeWidth="2dp"
                app:counterTextColor="@color/material_dynamic_primary60"
                app:cursorColor="@color/material_dynamic_primary60"
                app:errorTextColor="@color/material_dynamic_primary60"
                app:helperTextTextColor="@color/material_dynamic_primary60"
                app:hintEnabled="true"
                app:hintTextColor="@drawable/text_hint_color"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/emotions_chip_group"
                app:layout_constraintWidth_percent=".82"
                app:placeholderTextColor="@drawable/text_hint_color"
                app:prefixTextColor="@color/material_dynamic_primary60"
                app:suffixTextColor="@color/material_dynamic_primary60"
                app:textInputLayoutFocusedRectEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/categoryInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textColor="@color/material_dynamic_secondary10"
                    tools:ignore="TouchTargetSizeCheck,TextContrastCheck,VisualLintTextFieldSize" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/addButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/material_dynamic_primary60"
                android:fontFamily="sans-serif-medium"
                android:text="@string/add_journal"
                android:textColor="@color/material_dynamic_neutral99"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/CategoryLayout"
                app:layout_constraintWidth_percent=".82"
                tools:ignore="TextContrastCheck,VisualLintButtonSize" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                app:layout_constraintEnd_toStartOf="@+id/gridViewCard"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/addButton"
                tools:ignore="UselessLeaf" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/loadingLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#C6FFFFFF"
        android:visibility="gone">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:cardCornerRadius="24dp"
            app:cardBackgroundColor="@color/material_dynamic_primary99"
            app:cardElevation="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent=".42">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_margin="10dp">

                <com.google.android.material.progressindicator.CircularProgressIndicator
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:indeterminate="true"
                    android:visibility="visible"
                    app:indicatorColor="@color/material_dynamic_primary60"
                    app:indicatorDirectionCircular="clockwise"
                    app:indicatorSize="50dp"
                    app:trackColor="@color/material_dynamic_primary99" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/please_wait"
                    android:textColor="@color/material_dynamic_secondary10"
                    android:textSize="24sp" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
